  "coq-mathcomp-field" { (>= "1.12.0" & < "1.13~") }
  "coq-mathcomp-analysis" { (>= "0.3.6" & <= "0.3.7") }
  "coq-infotheo" { >= "0.3.2" & < "0.4~"}
  "coq-paramcoq" { >= "1.1.2" & < "1.2~" }
]

